            <!-- </intent-filter> -->
            <!-- <meta-data -->
            <!-- android:name="android.app.searchable" -->
            <!-- android:resource="@xml/searchable" /> -->
        </activity>
        <activity
            android:name="com.mavenacts.hymnbook.HymnItemActivity"
            android:label="@string/title_activity_hymn_item" >
        </activity>
        <activity
            android:name="com.mavenacts.hymnbook.AppendixItemActivity"
            android:label="@string/title_activity_hymn_item" >
        </activity>
        <activity
            android:name="com.mavenacts.hymnbook.SearchResultsActivity"
            android:label="@string/title_activity_search_results" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.mavenacts.hymnbook.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>